{% extends 'body_main.html.twig' %}
{% form_theme form 'Form/base_style.html.twig' %}
{% block title %}{{ 'config.userRoles.edit.addTitle' | trans }}{% endblock %}
{% block caption %}{{ 'config.userRoles.edit.addTitle' | trans }}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
            <div class="ibox">
                <div class="ibox-content">
                    {{ form_start(form, {'method': 'post', 'action': '', 'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_widget(form) }}
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">{{ 'config.userRoles.index.addNewButton' | trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    {% if mainError %}
                        <div class="toast-error">{{ mainError }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}