{% extends 'body_main.html.twig' %}
{% form_theme form 'Form/base_style.html.twig' %}
{% block title %}{{ 'finance.myWalletDeposit' | trans }}{% endblock %}
{% block caption %}{{ 'finance.myWalletDeposit' | trans }} "{{ wallet.name }}"{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>{{ 'finance.deposit.set_amount' | trans }}</h5>
                </div>
                <div class="ibox-content">
                    {{ form_start(form, {'method': 'post', 'action': path('astra_shared_finance_deposit',{'wallet':wallet.id}), 'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_widget(form) }}
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">{{ 'finance.myWalletDoDeposit' | trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    {% if mainError %}
                    <div class="toast-error">{{ mainError }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){$(".touchspin").TouchSpin({
            min: 1,
            max: 10000000,
            step: 50,
            decimals: 2,
            boostat: 2,
            maxboostedstep: 10,
            postfix: '<i class="fa fa-money"></i>',
            buttondown_class: 'btn btn-white',
            buttonup_class: 'btn btn-white'
        })});
    </script>
{% endblock %}