{% extends "AstraSharedBundle:MyProfile:layout.html.twig" %}
{% block title %}{{ 'myProfile.name' | trans }} - {{ 'myProfile.finance' | trans }}{% endblock %}
{% block caption %}{{ 'myProfile.name' | trans }} - {{ 'myProfile.finance' | trans }}{% endblock %}
{% block body_content %}
    <h2>{{ 'finance.myWalletAmount' | trans }}</h2>
    <div class="profile-finance-ballance-info-palce">
        {{ shared.MoneySumm(totalSumm) }}
    </div>
    <div class="row">
        <div class="profile-finance-ballance-depositbutton-palce col-lg-offset-4 col-lg-4">
            <a class="btn btn-primary btn-rounded btn-block" href="{{ path('astra_shared_finance_deposit') }}"><i class="fa fa-money with-text"></i>{{ 'finance.myWalletDoDeposit' | trans }}</a>
        </div>
    </div>
    <div class="hr-line-dashed"></div>
    {% for item in allTransactionItem %}
        {% set transaction = item.walletTransaction %}
        <div class="row">
        <div class="col-lg-4 col-md-offset-4">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{ shared.MoneySumm(item.amount) }}</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-down"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" style="display: none">
                    <table class="table table-hover no-margins">
                        <tbody>
                        <tr>
                            <td class="no-borders"><small>{{ 'finance.transaction.date' | trans }}</small></td>
                            <td class="no-borders">{{ transaction.dateCreate | date_time_format }}</td>
                        </tr>
                        <tr>
                            <td><small>{{ 'finance.transaction.dateConfirmed' | trans }}</small></td>
                            <td>{{ transaction.dateProcessing | date_time_format }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
        <div class="hr-line-dashed"></div>
    {% endfor %}
{% endblock %}

