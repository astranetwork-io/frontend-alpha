{% extends 'body_clean_form.html.twig' %}
{% block body %}
<div>
    <div>
        <h1 class="logo-name">{{ 'login.bigName' | trans }}</h1>
    </div>
    <h3>{{ 'login.welcome' | trans }}</h3>
    <p>{{ 'login.slogan' | trans }}</p>
    <p>{{ 'login.loginFor' | trans }}</p>
    <form class="m-t" role="form" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <input id="username" name="_username" value="{{ last_username }}" type="text" class="form-control" placeholder="{{ 'user.username'|trans }}" required="required" />
        </div>
        <div class="form-group">
            <input id="password" name="_password" type="password" class="form-control" placeholder="{{ 'user.password'|trans }}" required="required" />
        </div>

        <div class="form-group">
            <div class="checkbox i-checks"><label> <input type="checkbox" id="remember_me" name="_remember_me" value="on" ><i></i>{{ 'login.rememberMe' | trans }}</label></div>
        </div>

        <button type="submit" id="_submit" name="_submit" class="btn btn-primary block full-width m-b">{{ 'login.submit'|trans }}</button>

        <a href="{{ path("fos_user_resetting_request") }}"><small>{{ 'login.resetPassword'|trans }}</small></a>
        <p class="text-muted text-center"><small>{{ 'login.doNotHaveAccount' | trans }}</small></p>
        <a class="btn btn-sm btn-white btn-block" href="{{ path("fos_user_registration_register") }}">{{ 'login.doCreateAccount' | trans }}</a>
    </form>
    <p class="m-t"> <small>{{ 'copyright' | trans }}</small> </p>
</div>
{% endblock %}