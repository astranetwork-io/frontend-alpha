{% extends 'body_clean_form.html.twig' %}
{% block body %}
<div>
    <div>
        <h1 class="logo-name">{{ 'login.bigName' | trans }}</h1>
    </div>
    <h3>{{ 'register.welcome' | trans }}</h3>
    <p>{{ 'register.slogan' | trans }}</p>
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'm-t', 'role':'form'}}) }}
        <div class="form-group">
            {{ form_widget(form.username, {'attr':{'class':'form-control', 'placeholder':'user.username', 'required':'required'},'translation_domain':'messages'}) }}
            {% if not form.username.vars.valid %}<span class="error">{{ form.username.vars.errors }}</span>{% endif %}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, { 'attr':{'class':'form-control', 'placeholder':'user.email', 'required':'required'},'translation_domain':'messages'}) }}
            {% if not form.email.vars.valid %}<span class="error">{{ form.email.vars.errors }}</span>{% endif %}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr':{'class':'form-control', 'placeholder':'user.password', 'required':'required'},'translation_domain':'messages'}) }}
            {% if not form.plainPassword.first.vars.valid %}<span class="error">{{ form.plainPassword.first.vars.errors }}</span>{% endif %}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr':{'class':'form-control', 'placeholder':'user.passwordConfirm', 'required':'required'},'translation_domain':'messages'}) }}
            {% if not form.plainPassword.second.vars.valid %}<span class="error">{{ form.plainPassword.second.vars.errors }}</span>{% endif %}
        </div>
        <div class="form-group">
            <div class="checkbox i-checks"><label> <input type="checkbox"><i></i>{{ 'register.agreeTerms' | trans }}</label></div>
        </div>
        <button type="submit" class="btn btn-primary block full-width m-b">{{ 'register.doRegister' | trans }}</button>

        <p class="text-muted text-center"><small>{{ 'register.alreadyHaveAccount' | trans }}</small></p>
        <a class="btn btn-sm btn-white btn-block" href="{{ url('fos_user_security_login') }}">{{ 'register.toLogin' | trans }}</a>
    {{ form_end(form) }}
    <p class="m-t"> <small>{{ 'copyright' | trans }}</small> </p>
</div>
{% endblock %}
